<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AD_SP</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if ((User.IsInRole("Trainee")) || (User.IsInRole("Trainer")))
                    {
                        <li>@Html.ActionLink("My Course", "CourseAssigned", "Train")</li>
                        <li>@Html.ActionLink("Course List", "Course", "Train")</li>
                    }
                    @if (User.IsInRole("TrainingStaff"))
                    {
                        <li>@Html.ActionLink("Course List", "Course", "TrainingStaff")</li>
                        <li>@Html.ActionLink("Course Category", "Category", "TrainingStaff")</li>
                        <li>@Html.ActionLink("Trainee", "Trainee", "TrainingStaff")</li>
                        <li>@Html.ActionLink("Trainer", "Trainer", "TrainingStaff")</li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Training staff", "TrainingStaff", "Admin")</li>
                        <li>@Html.ActionLink("Trainer", "Trainer", "Admin")</li>
                        <li>@Html.ActionLink("Role List", "Role", "Admin")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr>
        <footer>
            <p style="color:rgba(0, 0, 255, 0.6);">&copy; @DateTime.Now.Year - AD_SP Application</p>
        </footer>
    </div>
</body>
</html>
